---
layout: base.njk
---

<article class="project">
  <header class="project-header">
    <h1>{{ title }}</h1>
    
    {% if featured_image %}
    <img src="{{ featured_image }}" alt="{{ title }}" class="featured-image">
    {% endif %}
    
    <div class="project-meta">
      {% if scale %}<span>Scale: {{ scale }}</span>{% endif %}
      {% if status %}<span class="status-{{ status | lower }}">Status: {{ status }}</span>{% endif %}
      {% if start_date %}<span>Started: {{ start_date | readableDate }}</span>{% endif %}
    </div>
  </header>
  
  <div class="project-content">
    {{ content | safe }}
  </div>
  
  {% if comments %}
    {% include "comments.njk" %}
  {% endif %}
</article>
